<h1><%= @restaurant.name %></h1>

<ul class = "details" id = "food-deets">
  <li><%= @restaurant.address %></li>
  <li><%= "#{@restaurant.city}, #{@restaurant.state}" %></li>
  <li><%= @restaurant.zip %></li>
  <br>
  <li><%= "Description: #{@restaurant.description}" %></li>
  <li><%= "Category: #{@restaurant.category}" %></li>
  <br>
  <li><%= link_to("Add review",new_restaurant_review_path(@restaurant.id)) %></li>
</ul>

<h2>Reviews</h2>

<ul class = "details">
  <% @reviews.each do |review| %>
    <li><%= "#{review.rating} stars of 5"%></li>
    <li><%= review.body%></li>
    <li><em><%= review.created_at.to_formatted_s(:db) %></em></li>
    <br>
  <% end %>
</ul>
